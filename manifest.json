{
    "name" : "Bose AR Addon for Mozilla Hubs",
    "version" : "1.0",
    "manifest_version" : 2,

    "browser_action": {
        "default_popup" : "popup.html"
    },

    "content_scripts" : [
        {
            "matches" : ["http://*/*", "https://*/*"],
            "js" : ["content.js"],
            "run_at" : "document_end"
        }
    ],
    "permissions" : ["activeTab", "tabs"],
    "web_accessible_resources" : ["/injection.js", "/bose-ar-web-sdk.min.js"],
    "icons": { "16": "icon.png",
        "48": "icon.png",
       "128": "icon.png" }
}